<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen12dp"
    tools:context=".toastjava.MainActivity">

<Button
    android:id="@+id/btn_toast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/simple_toast"
    android:onClick="onViewClick"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/btn_customtoast"
    />

<Button
    android:id="@+id/btn_customtoast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onViewClick"
    android:text="@string/this_is_custom_toast"
    android:layout_marginTop="@dimen/dimen12dp"
    app:layout_constraintTop_toBottomOf="@id/btn_toast"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>

